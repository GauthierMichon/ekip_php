        <div class="container">
            <div class="card">
                <div class="item">
                    <img class="img" src="https://via.placeholder.com/150">
                    <h2>Titre : {{ offre.Title }}</h2>
                    <h3>Ville : {{ offre.Ville }}</h3>
                    <h3>Contrat en {{ offre.ContratType }} Ã  temps {{ offre.ContratDuration }}</h3>
                    
                </div>
            </div>
        </div>
    </a>
    {% endfor %}

</div>
{% endblock %}
